extends layout

block content
  div(id="current-year" data="#{year}" hidden)
  div.container
    div.custom-calendar-wrap.custom-calendar-full
      div.custom-header.clearfix
        h3.custom-month-year
          span#custom-month.custom-month 
          span#custom-year.custom-year
          nav
            span#custom-prev.custom-prev
            span#custom-next.custom-next
            span#custom-current.custom-current(title='Got to current date')
      div#calendar.fc-calendar-container
append scripts
  script(src="/js/libs/lodash.js")
  script(src="/js/libs/jquery.calendario.js")
  script(src="/js/libs/modernizr.custom.63321.js")
  script(src="/js/calendario.js")